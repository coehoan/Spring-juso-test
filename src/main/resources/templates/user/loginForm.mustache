<div class="container">
    <h1>로그인</h1>
    <hr>
    <!-- 로그인 폼 시작 -->
    <form class="m_auth_box" action="/login" method="post">
        <div class="form-group">
            <label>아이디</label>
            <input id="username" name="username" type="text" class="form-control mt-3" required>
        </div>
        <div class="form-group mt-3">
            <label>비밀번호</label>
            <input id="password" name="password" type="password" class="form-control mt-3" title="password" required>
        </div>
        <div class="form-group mt-5">
            <button type="submit" class="btn bg-dark text-light">로그인</button>
        </div>
    </form>
    <!-- 로그인 폼 끝 -->
</div>
